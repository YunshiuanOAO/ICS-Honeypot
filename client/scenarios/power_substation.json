{
    "name": "Power Substation",
    "description": "模擬配電變電站運行，包含電壓電流監測、功率因數控制、變壓器狀態",
    "author": "ICS Honeypot Team",
    "version": "1.0",
    "modbus": {
        "registers": [
            {"addr": 0, "name": "line_voltage", "wave": "random_walk", "min": 395, "max": 405, "step": 2, "description": "線電壓 (V)"},
            {"addr": 1, "name": "line_current_x10", "wave": "sine", "min": 800, "max": 1500, "period": 3600, "description": "線電流 x10 (A)"},
            {"addr": 2, "name": "active_power", "wave": "sine", "min": 200, "max": 400, "period": 3600, "description": "有功功率 (kW)"},
            {"addr": 3, "name": "reactive_power", "wave": "random_walk", "min": 40, "max": 80, "step": 5, "description": "無功功率 (kVar)"},
            {"addr": 4, "name": "power_factor_x100", "wave": "random_walk", "min": 92, "max": 98, "step": 1, "description": "功率因數 x100"},
            {"addr": 5, "name": "frequency_x100", "wave": "random_walk", "min": 4995, "max": 5005, "step": 1, "description": "頻率 x100 (Hz)"},
            {"addr": 6, "name": "transformer_oil_temp_x10", "wave": "sine", "min": 480, "max": 580, "period": 7200, "description": "變壓器油溫 x10 (°C)"},
            {"addr": 7, "name": "winding_temp_x10", "wave": "sine", "min": 550, "max": 680, "period": 7200, "description": "繞組溫度 x10 (°C)"},
            {"addr": 8, "name": "load_percentage", "wave": "sine", "min": 50, "max": 90, "period": 3600, "description": "負載率 (%)"}
        ],
        "coils": [
            {"addr": 0, "name": "circuit_breaker_closed", "wave": "fixed", "value": true, "description": "斷路器閉合"},
            {"addr": 1, "name": "transformer_online", "wave": "fixed", "value": true, "description": "變壓器在線"},
            {"addr": 2, "name": "cooling_fan", "wave": "square", "on": 1800, "off": 600, "description": "冷卻風扇"},
            {"addr": 3, "name": "voltage_alarm", "wave": "random", "probability": 0.005, "description": "電壓警報"},
            {"addr": 4, "name": "current_alarm", "wave": "random", "probability": 0.005, "description": "電流警報"},
            {"addr": 5, "name": "overload_alarm", "wave": "random", "probability": 0.01, "description": "過載警報"}
        ],
        "input_registers": [
            {"addr": 0, "name": "voltage_sensor_1", "wave": "random_walk", "min": 395, "max": 405, "step": 2, "description": "電壓感測器 1"}
        ],
        "discrete_inputs": [
            {"addr": 0, "name": "manual_control", "wave": "fixed", "value": false, "description": "手動控制"}
        ]
    },
    "s7": {
        "db": {
            "1": {
                "0": {"type": "INT", "wave": "random_walk", "min": 395, "max": 405, "step": 2, "name": "line_voltage"},
                "2": {"type": "INT", "wave": "sine", "min": 800, "max": 1500, "period": 3600, "name": "line_current_x10"},
                "4": {"type": "INT", "wave": "sine", "min": 200, "max": 400, "period": 3600, "name": "active_power"},
                "6": {"type": "INT", "wave": "random_walk", "min": 40, "max": 80, "step": 5, "name": "reactive_power"},
                "8": {"type": "INT", "wave": "random_walk", "min": 92, "max": 98, "step": 1, "name": "power_factor_x100"},
                "10": {"type": "INT", "wave": "random_walk", "min": 4995, "max": 5005, "step": 1, "name": "frequency_x100"},
                "12": {"type": "INT", "wave": "sine", "min": 480, "max": 580, "period": 7200, "name": "oil_temp_x10"},
                "14": {"type": "INT", "wave": "sine", "min": 550, "max": 680, "period": 7200, "name": "winding_temp_x10"}
            }
        },
        "m": {
            "0": {"type": "BYTE", "wave": "status_flags"},
            "10": {"type": "BYTE", "wave": "counter"}
        }
    }
}


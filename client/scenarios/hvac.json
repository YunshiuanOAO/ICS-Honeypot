{
    "name": "HVAC System",
    "description": "模擬大型建築的中央空調系統，包含溫濕度控制、送風與回風監測",
    "author": "ICS Honeypot Team",
    "version": "1.0",
    "modbus": {
        "registers": [
            {"addr": 0, "name": "indoor_temp_x10", "wave": "random_walk", "min": 220, "max": 260, "step": 2, "description": "室內溫度 x10 (°C)"},
            {"addr": 1, "name": "indoor_humidity_x10", "wave": "random_walk", "min": 400, "max": 600, "step": 10, "description": "室內濕度 x10 (%)"},
            {"addr": 2, "name": "supply_temp_x10", "wave": "sine", "min": 180, "max": 220, "period": 1800, "description": "送風溫度 x10 (°C)"},
            {"addr": 3, "name": "return_temp_x10", "wave": "sine", "min": 240, "max": 280, "period": 1800, "description": "回風溫度 x10 (°C)"},
            {"addr": 4, "name": "co2_ppm", "wave": "random_walk", "min": 350, "max": 450, "step": 5, "description": "CO2 濃度 (ppm)"},
            {"addr": 5, "name": "fan_rpm", "wave": "random_walk", "min": 800, "max": 1200, "step": 20, "description": "風機轉速 (RPM)"},
            {"addr": 6, "name": "compressor_load", "wave": "sine", "min": 40, "max": 80, "period": 3600, "description": "壓縮機負載 (%)"},
            {"addr": 7, "name": "setpoint_temp_x10", "wave": "fixed", "value": 240, "description": "設定溫度 x10 (°C)"},
            {"addr": 8, "name": "filter_pressure_drop", "wave": "random_walk", "min": 50, "max": 200, "step": 5, "description": "濾網壓降 (Pa)"}
        ],
        "coils": [
            {"addr": 0, "name": "fan_running", "wave": "fixed", "value": true, "description": "風機運行"},
            {"addr": 1, "name": "compressor_running", "wave": "square", "on": 600, "off": 300, "description": "壓縮機運行"},
            {"addr": 2, "name": "heating_valve", "wave": "fixed", "value": false, "description": "加熱閥"},
            {"addr": 3, "name": "cooling_valve", "wave": "fixed", "value": true, "description": "冷卻閥"},
            {"addr": 4, "name": "humidifier", "wave": "square", "on": 180, "off": 180, "description": "加濕器"},
            {"addr": 5, "name": "filter_alarm", "wave": "random", "probability": 0.01, "description": "濾網警報"}
        ],
        "input_registers": [
            {"addr": 0, "name": "outdoor_temp_x10", "wave": "sine", "min": 100, "max": 350, "period": 86400, "description": "戶外溫度 x10"}
        ],
        "discrete_inputs": [
            {"addr": 0, "name": "manual_mode", "wave": "fixed", "value": false, "description": "手動模式"}
        ]
    },
    "s7": {
        "db": {
            "1": {
                "0": {"type": "INT", "wave": "random_walk", "min": 220, "max": 260, "step": 2, "name": "indoor_temp_x10"},
                "2": {"type": "INT", "wave": "random_walk", "min": 400, "max": 600, "step": 10, "name": "indoor_humidity_x10"},
                "4": {"type": "INT", "wave": "sine", "min": 180, "max": 220, "period": 1800, "name": "supply_temp_x10"},
                "6": {"type": "INT", "wave": "sine", "min": 240, "max": 280, "period": 1800, "name": "return_temp_x10"},
                "8": {"type": "INT", "wave": "random_walk", "min": 350, "max": 450, "step": 5, "name": "co2_ppm"},
                "10": {"type": "INT", "wave": "random_walk", "min": 800, "max": 1200, "step": 20, "name": "fan_rpm"},
                "12": {"type": "INT", "wave": "sine", "min": 40, "max": 80, "period": 3600, "name": "compressor_load"}
            }
        },
        "m": {
            "0": {"type": "BYTE", "wave": "status_flags"},
            "10": {"type": "BYTE", "wave": "counter"}
        }
    }
}

